<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add A Task</h1>
      <p>remember to include a team to your task</p>

      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/tasks/add" method="POST">
        <div class="input-group">
          <label for="task_title">Task Title</label>
          <input type="text" name="task_title" id="task_title" class="input-box" placeholder="eg. Rick & Morty themed login"
            maxlength="100" value={{task_title}}>
        </div>
        <div class="input-group">
          <label for="task_description">Task Description</label>
          <textarea name="task_description" id="task_description" class="input-box" placeholder="Describe the details of the task"
            rows="10">{{task_description}}</textarea>
        </div>
        <div class="input-group">
          <label for="task_technologies">Task Technologies</label>
          <input type="text" name="task_technologies" id="task_technologies" class="input-box" placeholder="eg. Nodejs, FLASK"
          maxlength="100" value={{task_technologies}}>
        </div>
        <div class="input-group">
          <label for="task_team">Task Team</label>
          <input type="text" name="task_team" id="task_team" class="input-box" placeholder="Enter your team"
            maxlength="100" value={{task_team}}>
        </div>
        <div class="input-group">
          <label for="task_owner">Task Owner</label>
          <input type="email" name="task_owner" id="task_owner" class="input-box" placeholder="Enter an email"
            value={{task_owner}}>
        </div>
        <input type="submit" value="Add Task" class="btn btn-reverse">
      </form>
    </div>
  </section>